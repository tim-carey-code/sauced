<% if @is_link %>
  <%= link_to @btn_name, @btn_path, class: "text-white bg-[#800000] hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-[#800000] dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
<% elsif @is_form %>
  <%= @form.submit @btn_name, class: "cursor-pointer text-white bg-[#800000] hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-[#800000] dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
<% else %>
  <%= button_to @btn_name, @btn_path, class: "text-white bg-[#800000] hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-[#800000] dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
<% end %>
