<div class="d-flex justify-content-center align-items-center m-2">
  <div class="card" style="width: 18rem;">
    <% if hotsauce.sauce_bottle_image.attached? %>
      <%= image_tag hotsauce.sauce_bottle_image, class: "card-img-top" %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= hotsauce.name %></h5>
      <small class="text-center text-muted"><%= hotsauce.description %></small>
      <hr>
      <p class="card-text fs-5"><%= hotsauce.review %></p>
      <p><%= hotsauce.rating %></p>
      <%= link_to "Show #{hotsauce.name}", hotsauce, class: "btn btn-primary" %>
    </div>
  </div>
</div>
