
<div class="row">
  <div class="col">

    <div class="card border text-light border-white border-2 m-2">
      <div class="card-body bg-peppers">
        <p class="lead">
          <%= feed_item.user.username %> added <%= link_to feed_item.feedable.hotsauce.name, hotsauce_path(feed_item.feedable.hotsauce) %> to their favorites
        </p>
        <% if feed_item.feedable.hotsauce.sauce_bottle_image.attached? %>
          <%= image_tag feed_item.feedable.hotsauce.sauce_bottle_image.variant(:medium), class: "img-fluid" %>
        <% else %>
          <%= image_tag "ketchup_bottle.png", class: "img-fluid" %>
        <% end %>
        <small>
          <%= time_ago_in_words(feed_item.created_at) %> ago
        </small>
      </div>
    </div>

  </div>
</div>