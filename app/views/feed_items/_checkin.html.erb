<%= render CardComponent.new do %>
  <p>
    <%= link_to user_profile_path(feed_item.user), class: "link-primary" do %>
      <%= feed_item.user.username %>
    <% end %>
    checked into <%= link_to feed_item.feedable.hotsauce.name, hotsauce_path(feed_item.feedable.hotsauce), class: "link-primary" %>
  </p>
  <div>
    <% if feed_item.feedable.hotsauce.sauce_bottle_image.attached? %>
      <%= image_tag feed_item.feedable.hotsauce.sauce_bottle_image, class: "h-auto max-w-xs rounded-lg" %>
    <% else %>
      <%= image_tag "ketchup_bottle.png", class: "h-auto max-w-xs rounded-lg" %>
    <% end %>
    <% if feed_item.feedable.review.present? %>
      <%= feed_item.feedable.review %>
    <% end %>
  </div>
  <small>
    <%= time_ago_in_words(feed_item.created_at) %> ago
  </small>
  <p id="checkin_<%= feed_item.feedable.id %>_likes">
    <%= render partial: "checkins/likes", locals: {checkin: feed_item.feedable} %>
  </p>
<% end %>
