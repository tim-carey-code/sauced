
<%= turbo_frame_tag dom_id(checkin) do %>
  <% if user_signed_in? && current_user.likes?(checkin) %>
    <%= link_to "Unlike", checkin_like_path(checkin),  data: { turbo_method: :delete } %>
  <% else %>
    <%= link_to "Like", checkin_like_path(checkin), data: { turbo_method: :post } %>
  <% end %>

  <%= checkin.likes.count %>

  <% checkin.likes.each do |like| %>
    <%= image_tag like.user.avatar, width: 20 %>
  <% end %>

<% end %>



