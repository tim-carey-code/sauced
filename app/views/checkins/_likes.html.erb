<% if user_signed_in? && current_user.likes?(checkin) %>
  <%= link_to "Unlike", checkin_like_path(checkin), method: :delete, remote: true %>
<% else %>
  <%= link_to "Like", checkin_like_path(checkin), data:{ turbo: false, method: :post, remote: true } %>
<% end %>

<%= checkin.likes.count %>

<% checkin.likes.each do |like| %>
  <%= image_tag like.user.avatar_url, width: 20 %>
<% end %>
